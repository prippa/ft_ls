# include <sys/types.h>
# include <sys/stat.h>
# include <stdio.h>
# include <dirent.h>
# include <limits.h>
# include <errno.h>
# include <time.h>
# include <stdlib.h>
# include <string.h>

# define FILE_NAME_SIZE 256

int		main(void)
{
	char **file_name;
	char buf[FILE_NAME_SIZE];
	int len = 9;
	int i = 0;
	int j;
	file_name = (char **)malloc(sizeof(char *) * len + 1);
	while (i < len)
	{
		file_name[i] = (char *)malloc(sizeof(char) * FILE_NAME_SIZE);
		i++;
	}
	strcpy(file_name[0], "ft_ls");
	strcpy(file_name[1], "libft");
	strcpy(file_name[2], "Makefile");
	strcpy(file_name[3], "main.c");
	strcpy(file_name[4], "libft.a");
	strcpy(file_name[5], "ft_ls.h");
	strcpy(file_name[6], "obj");
	strcpy(file_name[7], "author");
	strcpy(file_name[8], "ls_show.c");
	file_name[len] = NULL;
	i = 0;
	while (file_name[i])
	{
		printf("%s\n", file_name[i]);
		i++;
	}
	printf("\n-----Sorted-----\n\n");
	i = 0;
	while (i < len)
	{
		j = 0;
		while (j < len - 1)
		{
			if (strcmp(file_name[j], file_name[j + 1]) > 0)
			{
				strcpy(buf, file_name[j]);
				strcpy(file_name[j], file_name[j + 1]);
				strcpy(file_name[j + 1], buf);
			}
			j++;
		}
		i++;
	}
	i = 0;
	while (file_name[i])
	{
		printf("%s\n", file_name[i]);
		i++;
	}
	return (0);
}
